<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_ppap_category">
        <field name="name">PPAP Rule</field>
        <field name="description">PPAP Rule</field>
        <field name="sequence">50</field>
    </record>

    <record id="group_ppap_user" model="res.groups">
        <field name="name">PPAP User</field>
        <field name="category_id" ref="module_ppap_category"/>
    </record>

    <record id="group_ppap_admin" model="res.groups">
        <field name="name">PPAP Admin</field>
        <field name="category_id" ref="module_ppap_category"/>
    </record>



    <!-- Groups -->
    <record id="access_rule_user_own_company_ppap" model="ir.rule">
        <field name="name">Own Company User PPAP Access Rule</field>
        <field name="model_id" ref="model_offer"/>
        <field name="domain_force">[('create_uid.company_id', '=', user.company_id.id), ('vendor_id.id', '=', user.partner_id.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4,ref('ppap_custom.group_ppap_user'))]"/>
    </record>
</odoo>
