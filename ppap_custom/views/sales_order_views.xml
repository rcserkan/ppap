<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="sale_order_form_inherit">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <header>
                    <button string="Request a Quote" name="request_a_quote" type="object" class="oe_form_button oe_highlight btn-success" invisible="state != 'draft'"/>
                </header>
                <xpath expr="//button[@name='action_view_invoice']" position="after">
                    <button class="oe_stat_button" icon="fa-compress" type="object" name="get_offers">
                        <field string="Offers" name="offer_count" widget="statinfo"></field>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>