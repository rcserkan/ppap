<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="offer_tree_view" model="ir.ui.view">
        <field name="name">offer.tree</field>
        <field name="model">offer</field>
        <field name="arch" type="xml">
            <tree string="Offer" editable="bottom" create="0">
                <field name="vendor_id" readonly="1"/>
                <field name="sale_id" readonly="1"/>
                <field name="sale_line_id" readonly="1"/>
                <field name="product_id" readonly="1"/>
                <field name="offer_price"/>
                <field name="state" decoration-success="state == 'accepted'" decoration-warning="state == 'rejected'" decoration-info="state == 'waiting'"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="offer_action">
        <field name="name">Offer</field>
        <field name="res_model">offer</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the form
            </p>
        </field>
    </record>
    <menuitem id="menu_ppap_custom_main" name="PPAP" web_icon="ppap_custom,static/description/icon.png"/>
    <menuitem name="Offer" id="offer_user_menu" parent="menu_ppap_custom_main" action="offer_action" groups="ppap_custom.group_ppap_user" sequence="1"/>
    <menuitem name="Offer" id="offer_admin_menu" parent="menu_ppap_custom_main" action="offer_action" groups="ppap_custom.group_ppap_admin" sequence="1"/>
</odoo>
