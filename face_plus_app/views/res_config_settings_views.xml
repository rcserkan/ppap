<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.product</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='companies']" position="after">
                    <h2>Face Plues Api Settings</h2>
                    <div class="row mt16 o_settings_container" id="product_general_settings">
                        <div class="col-12 col-lg-6 o_setting_box" id="weight_uom_setting">
                            <div class="o_setting_right_pane">
                                <label for="face_plus_url" string="Face Plus Url"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="face_plus_url" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="manage_other_setting">
                            <div class="o_setting_right_pane">
                                <label for="face_plus_key"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="face_plus_key" class="o_light_label" password="True"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="face_plus_secret"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="face_plus_secret" class="o_light_label" password="True"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>OpenAI Settings</h2>
                    <div class="row mt16 o_settings_container" id="product_general_settings">
                        <div class="col-12 col-lg-6 o_setting_box" id="weight_uom_setting">
                            <div class="o_setting_right_pane">
                                <label for="openai_key" string="OpenAI Key"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="openai_key" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="weight_uom_setting">
                            <div class="o_setting_right_pane">
                                <label for="openai_props_character" string="OpenAI Karakter Props"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="openai_props_character" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="openai_props_skin" string="OpenAI Cilt Props"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="openai_props_skin" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="openai_props_mood" string="OpenAI Ruh Hali Props"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="openai_props_mood" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="openai_props_dream" string="OpenAI Rüya Props"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="openai_props_dream" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="openai_props_style" string="OpenAI Görünüm Props"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="openai_props_style" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="openai_props_wish" string="OpenAI Dilek Props"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="openai_props_wish" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="openai_props_nutrition" string="OpenAI Beslenme Props"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="openai_props_nutrition" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="openai_props_personal" string="OpenAI Kişisel Props"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="openai_props_personal" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
</odoo>
